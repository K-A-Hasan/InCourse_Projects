@model IEnumerable<Covid_19.Models.CoronaCase>

@{
    ViewBag.Title = "Index";
}

<h3>Daily cases</h3>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-info btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country.Country_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_reported)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.New_Cases)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.New_deaths)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Country.Country_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_reported)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.New_Cases)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.New_deaths)
        </td>
        <td>
            <a class="btn btn-primary btn-sm rounded-circle" href="@Url.Action("Edit", "CoronaCases", new { id = item.CoronaCaseId})"><i class="fa fa-pencil"></i></a>
            <a class="btn btn-danger btn-sm rounded-circle" href="@Url.Action("Delete", "CoronaCases", new { id =item.CoronaCaseId })"><i class="fa fa-trash"></i></a>
          
        </td>
    </tr>
}

</table>
