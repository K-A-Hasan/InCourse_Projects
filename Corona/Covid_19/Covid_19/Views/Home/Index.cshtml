
@{
    ViewBag.Title = "Index";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/Pictures/coronavirus-scaled.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h2>Coronavirus explained</h2>
                <p>What you need to know</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/Pictures/doctor.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h2>Experts Preview</h2>
                <p>Why WHO decleared <span id="covid">#Covid-19</span> as pendemic</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/Pictures/stop-coronavirus-covid-19-design-vector.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h2>Protect Yourself</h2>
                <p>What should you do to prevent <span id="covid">#Covid-19</span></p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">
    <div class="card-deck">
        <div class="card border-warning mb-3 shadow-lg">
            <img class="card-img-top" src="/Pictures/travel.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">COVID-19 travel advice for general public</h5>
                <p class="card-text">This article provides you informations that you need to know before travelling in this pendemic situation</p>
            </div>
            <div class="card-footer">
                <asp:LinkButton ID="LinkButton1" runat="server" CssClass="btn btn-primary" PostBackUrl="~/Travelling.aspx">Read more</asp:LinkButton>
            </div>
        </div>
        <div class="card border-warning mb-3 shadow-lg">
            <img class="card-img-top" src="/Pictures/who.png" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Timeline: WHO's COVID-19 response</h5>
                <p class="card-text"></p>
            </div>
            <div class="card-footer">
                <asp:LinkButton ID="LinkButton2" runat="server" CssClass="btn btn-primary" PostBackUrl="~/WhoResponse.aspx">Read more</asp:LinkButton>
            </div>
        </div>
        <div class="card border-warning mb-3 shadow-lg">
            <img class="card-img-top" src="Pictures/situation-report-3.jpeg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Basic Information</h5>
                <p class="card-text">The first case of Covid-19 in Bangladesh was detected on 8 March 2020. So far, the country has detected 260,507 confirmed cases of Covid-19.......</p>
            </div>
            <div class="card-footer">
                <asp:LinkButton ID="LinkButton3" runat="server" CssClass="btn btn-primary" PostBackUrl="~/bdReport.aspx">Read more</asp:LinkButton>
            </div>
        </div>
    </div>
</div>
<div class="dashboard">
    <h2>Numbers at a glance</h2>

    <div class="card-deck ">

        <div class="card">

            <div class="card-body">
                <h1 class="card-title num">20 162 474</h1>
                <h4 class="card-text nump">Confirmed cases</h4>
            </div>
            <div class="card-footer">
                <small class="text-muted">Last update: 12 August 2020, 06:00 GMT+6</small>
            </div>
        </div>
        <div class="card">

            <div class="card-body">
                <h1 class="card-title num">737 417</h1>
                <h4 class="card-text nump">Confirmed deaths</h4>
            </div>
            <div class="card-footer">
                <small class="text-muted">Last update: 12 August 2020, 06:00 GMT+6</small>
            </div>
        </div>
        <div class="card">

            <div class="card-body">
                <h1 class="card-title num">216</h1>
                <h4 class="card-text nump">Countries, areas or territories with cases</h4>
            </div>
            <div class="card-footer">
                <small class="text-muted">Last update: 12 August 2020, 06:00 GMT+6</small>
            </div>
        </div>
    </div>
</div>

