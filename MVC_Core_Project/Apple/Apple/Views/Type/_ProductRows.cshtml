@model Apple.Model.Product
<tr>
    <td>
        <input type="hidden" asp-for="ProductId" />
        <input asp-for="ProductName" class="form-control form-control-sm" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </td>
    <td>



        <input type="text" asp-for="ReleaseDate" class="form-control form-control-sm" />



        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </td>

    <td style="width:120px">
        <button type="button" class="btn btn-danger btn-sm del-product"><span class="fa fa-trash"></span> Delete</button>
    </td>
</tr>

