@model Apple.Model.ProductType
@{
    ViewData["Title"] = "Create";
}
  <div class="container">
      


<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Product type</h4>
    </div>
    <div class="card-body">
        @if (ViewBag.PostBack != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Success!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p>Data Save Successfully.</p>
            </div>
        }
        <div class="card-text">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group row">

                    <div class="col-12">
                        <input asp-for="ProductTypeName" class="form-control" placeholder="Type Name" />
                        <span asp-validation-for="ProductTypeName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12 text-center">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>

                </div>
            </form>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index"><span class="fa fa-long-arrow-left"></span> Back to List</a>
    </div>
</div>

  </div>


@section styles {

  <environment include="Development">
      <link href="~/libs/fontawesome/css/font-awesome.css" rel="stylesheet" />

      <link href="~/form/css/style.css" rel="stylesheet" /> 
      <link href="~/libs/gijgo/css/gijgo.css" rel="stylesheet" />
      <link href="~/libs/bs4-toast/toast.min.css" rel="stylesheet" />
  </environment>
}
@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/libs/bs4-toast/toast.min.js"></script>


}
