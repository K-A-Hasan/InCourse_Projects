@model Apple.Model.Product
<tr>
    <td>
        <input asp-for="ProductName" class="form-control form-control-sm" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </td>
    <td>
        <input type="text" asp-for="ReleaseDate"  class="form-control form-control-sm" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </td>
    <td style="width:90px">
        <button type="button" class="btn btn-primary btn-sm add"><span class="fa fa-plus"></span> Add</button>
    </td>
</tr>
@section styles{
    <link href="~/libs/gijgo/css/gijgo.css" rel="stylesheet" />
}
@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/libs/bs4-toast/toast.min.js"></script>
    <script src="~/libs/gijgo/js/gijgo.js"></script>
  
    <script>

        $('#ReleaseDate').datepicker();

    </script>
}