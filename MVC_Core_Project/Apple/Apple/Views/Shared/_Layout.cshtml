<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/assets/fonts/font-awesome.min.css" rel="stylesheet" />
        <link href="~/assets/css/styles.min.css" rel="stylesheet" />
        <script src="~/libs/popper/popper.js"></script>
        <script src="~/libs/jquery/jquery.js"></script>

    </environment>
    @RenderSection("styles", false)
</head>
<body>
    <div>
        <nav class="navbar navbar-dark navbar-expand-md fixed-top bg-dark">
            <div class="container-fluid">
                <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse flex-grow-1 justify-content-between"
                     id="navcol-1">
                    <ul class="nav navbar-nav flex-grow-1 justify-content-between">

                        <li class="nav-item" role="presentation"><a asp-action="Index" asp-controller="Home" class="nav-link"><i class="fa fa-apple flex-grow-1 justify-content-between apple-logo"></i></a></li>
                        <li class="nav-item" role="presentation"><a asp-action="Index" asp-controller="Type" class="btn btn-outline-success">All</a> </li>
                        <li class="nav-item" role="presentation"><a asp-action="Index" asp-controller="ProductTypes" class="nav-link">Product type</a></li>
                        <li class="nav-item" role="presentation"><a asp-action="Index" asp-controller="Products" class="nav-link">Product</a></li>
                        <li class="nav-item" role="presentation"><a asp-action="Index" asp-controller="Features" class="nav-link">Feature</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="#"><i class="fa fa-search"></i></a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link ">Logout</button>
                                </form>
                            </li>


                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                            <li class="nav-item"><a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>
    <environment include="Development">
        <script src="~/libs/bootstrap/js/bootstrap.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>
